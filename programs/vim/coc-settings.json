{
  // Default settings for the coc vim plugin, similar to vscode
  // Python
  "python.jediEnabled": false,
  "python.formatting.provider": "black",
  "python.linting.enabled": false,
  "python.analysis.diagnosticEnabled": false,
  "pyls.plugins.pycodestyle.enabled": false,
  "pyls.plugins.pyflakes.enabled": false,
  "solargraph.checkGemVersion": false,
  // rustup needs to be disabled when running rust is managed via nix
  "rust-client.disableRustup": true,
  // terraform ls https://github.com/hashicorp/terraform-ls/blob/main/docs/USAGE.md
  "languageserver": {
	  "terraform": {
	  	"command": "terraform-ls",
	  	"args": ["serve"],
	  	"filetypes": [
	  		"terraform",
	  		"tf"
	  	],
	  	"initializationOptions": {},
	  	"settings": {}
	  }
	}
}
